<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_row"
    >

    <ImageView
        android:tag="6"
        android:layout_width="20dp"
        android:layout_height="match_parent"

        android:onClick="click_top"
        android:id="@+id/top_12"
        />
    <ImageView
        android:tag="6"
        android:layout_width="20dp"
        android:layout_height="match_parent"

        android:onClick="click_top"
        android:id="@+id/top_11"
        />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/do_3_4"
            android:id="@+id/top_1"
            android:onClick="click_top"
            android:layout_marginRight="5dp"
            android:tag="0"
            />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/do_2_4"
        android:onClick="click_top"
        android:layout_marginRight="5dp"
        android:id="@+id/top_2"
        android:tag="1"
        />

    <ImageView
        android:id="@+id/top_3"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/do_2_6"
        android:layout_marginRight="5dp"
        android:onClick="click_top"
        android:tag="2"
        />

    <ImageView
        android:id="@+id/top_4"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/do_1_5"
        android:onClick="click_top"
        android:layout_marginRight="5dp"
        android:tag="3"
        />
    <ImageView
        android:id="@+id/top_5"
        android:layout_marginRight="5dp"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/do_1_6"
        android:onClick="click_top"
        android:tag="4"
        />

    <ImageView
        android:id="@+id/top_6"
        android:layout_marginRight="5dp"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/do_1_2"
        android:onClick="click_top"
        android:tag="5"
        />

    <ImageView
        android:tag="6"
        android:layout_width="20dp"
        android:layout_height="match_parent"

        android:onClick="click_top"
        android:id="@+id/top_7"
        />

    <ImageView
        android:tag="6"
        android:layout_width="20dp"
        android:layout_height="match_parent"

        android:onClick="click_top"
        android:id="@+id/top_8"
        />

    <ImageView
        android:tag="6"
        android:layout_width="20dp"
        android:layout_height="match_parent"

        android:onClick="click_top"
        android:id="@+id/top_9"
        />

    <ImageView
        android:tag="6"
        android:layout_width="20dp"
        android:layout_height="match_parent"

        android:onClick="click_top"
        android:id="@+id/top_10"
        />



</LinearLayout>