<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashraf.domino.MainActivity"
    android:orientation="vertical"
    android:background="#004D40">
    <include
        android:id="@+id/om1"
        layout="@layout/top_row"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/left_top"
            android:onClick="Left_top"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@drawable/left_bottom"
            />
        <ImageView
            android:id="@+id/right_top"
            android:layout_marginLeft="50dp"
            android:onClick="Right_top"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@drawable/right_bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="horizontal">
        <include
            layout="@layout/left_row"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"/>
        <include
            layout="@layout/center"
            android:layout_width="0dp"
            android:layout_weight="11"
            android:layout_height="wrap_content"
            />
    <include
        layout="@layout/left_row"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
       />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:layout_gravity="center"
        >
    <ImageView
        android:id="@+id/left_bottom"
        android:onClick="Left_bottom"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:src="@drawable/left_bottom"
        />
    <ImageView
        android:id="@+id/right_bottom"
        android:layout_marginLeft="50dp"
        android:onClick="Right_bottom"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:src="@drawable/right_bottom"
        />
    </LinearLayout>
    <include
        layout="@layout/bottom_row"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_gravity="center|bottom"
        />
</LinearLayout>
